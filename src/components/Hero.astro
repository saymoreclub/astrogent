---
import { siteConfig } from '../config.ts';
---

<section
  class="relative overflow-hidden px-4 pt-28 pb-16 sm:px-6 lg:px-8 lg:pt-32 lg:pb-20 border-b-4 border-brand-charcoal bg-slate-50"
  style="background-image: radial-gradient(circle, #d1d5db 1px, transparent 1px); background-size: 24px 24px;"
>
  <div class="mx-auto max-w-7xl relative z-10">
    <div class="mx-auto max-w-4xl text-center">
      <h1 class="text-brand-charcoal mb-6 text-5xl leading-tight font-extrabold sm:text-6xl lg:text-7xl tracking-tight">
        {siteConfig.hero.headline}<br />
        <span class="relative inline-block mt-2">
          <span class="relative z-10 px-2">{siteConfig.hero.subheadline}</span>
          <span class="absolute bottom-1 left-0 h-[80%] w-full bg-brand-mint -rotate-1 z-0 rounded-sm"></span>
        </span>
      </h1>
      
      <p class="text-brand-charcoal/80 mb-10 text-xl leading-relaxed sm:text-2xl">
        {siteConfig.hero.description}
      </p>
      
      <div class="mb-16 flex flex-col justify-center gap-4 sm:flex-row px-4 sm:px-0">
        <a 
          href={siteConfig.hero.cta.primary.href} 
          class="bg-brand-mint border-2 border-brand-charcoal rounded-lg px-8 py-4 font-bold text-brand-charcoal shadow-[4px_4px_0px_0px_rgba(45,52,70,1)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none active:translate-x-[2px] active:translate-y-[2px] active:shadow-none transition-all text-center uppercase tracking-tight"
        >
          {siteConfig.hero.cta.primary.text}
        </a>
        <a 
          href={siteConfig.hero.cta.secondary.href} 
          class="border-brand-charcoal text-brand-charcoal rounded-lg border-2 bg-white px-8 py-4 font-bold shadow-[4px_4px_0px_0px_rgba(45,52,70,1)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none active:translate-x-[2px] active:translate-y-[2px] active:shadow-none transition-all text-center uppercase tracking-tight"
        >
          {siteConfig.hero.cta.secondary.text}
        </a>
      </div>

      <div class="relative w-full overflow-hidden md:overflow-visible">
        <div 
          id="hero-stats-track"
          class="flex md:grid md:grid-cols-3 gap-6 overflow-x-auto snap-x snap-mandatory no-scrollbar pb-12 px-4 -mx-4 md:px-2 md:mx-0 md:overflow-visible"
        >
          {
            siteConfig.hero.stats.map((stat) => (
              <div 
                class="flex-none w-[70%] md:w-auto snap-center bg-brand-lavender border-2 border-brand-charcoal p-8 rounded-xl shadow-[6px_6px_0px_0px_rgba(45,52,70,1)] hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none active:translate-x-[3px] active:translate-y-[3px] active:shadow-none transition-all cursor-default"
              >
                <div class="text-brand-charcoal mb-2 text-4xl font-black italic">
                  {stat.value}
                </div>
                <div class="text-brand-charcoal/70 text-[10px] tracking-widest uppercase font-black">
                  {stat.label}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

  @media (max-width: 767px) {
    #hero-stats-track {
      scroll-behavior: smooth;
    }
  }
</style>

<script>
  function initSimpleSlider() {
    const track = document.getElementById('hero-stats-track');
    if (!track || window.innerWidth >= 768) return;

    const cards = track.children;
    let index = 0;

    function autoMove() {
      index++;
      if (index >= cards.length) {
        index = 0;
      }
      
      const cardWidth = cards[0].offsetWidth + 24; 
      track.scrollTo({
        left: index * cardWidth,
        behavior: 'smooth'
      });
    }

    let interval = setInterval(autoMove, 2500);
    track.addEventListener('touchstart', () => clearInterval(interval), { passive: true });
  }

  document.addEventListener('DOMContentLoaded', initSimpleSlider);
  document.addEventListener('astro:after-swap', initSimpleSlider);
</script>