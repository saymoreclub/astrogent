---
import { siteConfig } from '../config.ts';
---

<section
  class="relative overflow-hidden px-4 pt-32 pb-20 sm:px-6 lg:px-8 border-b-2 border-brand-charcoal bg-slate-50"
  style="background-image: radial-gradient(circle, #d1d5db 1px, transparent 1px); background-size: 24px 24px;"
>
  <div class="mx-auto max-w-7xl relative z-10">
    <div class="mx-auto max-w-4xl text-center">
      <h1 class="text-brand-charcoal mb-6 text-5xl leading-tight font-extrabold sm:text-6xl lg:text-7xl">
        {siteConfig.hero.headline}<br />
        <span class="relative inline-block mt-2">
          <span class="relative z-10 px-2">{siteConfig.hero.subheadline}</span>
          <span class="absolute bottom-1 left-0 h-full w-full bg-brand-mint -rotate-1 z-0 rounded-sm"></span>
        </span>
      </h1>
      
      <p class="text-brand-charcoal/80 mb-10 text-xl leading-relaxed sm:text-2xl">
        {siteConfig.hero.description}
      </p>
      
      <div class="mb-16 flex flex-col justify-center gap-4 sm:flex-row px-4 sm:px-0">
        <a href={siteConfig.hero.cta.primary.href} class="bg-brand-mint border-2 border-brand-charcoal rounded-lg px-8 py-4 font-semibold text-brand-charcoal shadow-[4px_4px_0px_0px_rgba(45,52,70,1)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none active:translate-x-[2px] active:translate-y-[2px] active:shadow-none transition-all text-center">
          {siteConfig.hero.cta.primary.text}
        </a>
        <a href={siteConfig.hero.cta.secondary.href} class="border-brand-charcoal text-brand-charcoal rounded-lg border-2 bg-white px-8 py-4 font-semibold shadow-[4px_4px_0px_0px_rgba(45,52,70,1)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none active:translate-x-[2px] active:translate-y-[2px] active:shadow-none transition-all text-center">
          {siteConfig.hero.cta.secondary.text}
        </a>
      </div>

      <div class="relative w-full overflow-hidden md:overflow-visible">
        <div 
          id="hero-stats-track"
          class="flex overflow-x-auto snap-x snap-mandatory no-scrollbar -mx-4 px-4 pb-8
                 md:grid md:grid-cols-3 md:gap-6 md:px-2 md:mx-0 md:overflow-visible"
        >
          {
            siteConfig.hero.stats.map((stat) => (
              <div 
                class="flex-none w-[80%] mr-4 snap-center bg-brand-lavender border-2 border-brand-charcoal p-8 rounded-xl shadow-[6px_6px_0px_0px_rgba(45,52,70,1)] 
                       md:w-auto md:mr-0 hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none active:translate-x-[3px] active:translate-y-[3px] active:shadow-none transition-all cursor-default"
              >
                <div class="text-brand-charcoal mb-2 text-4xl font-bold italic">
                  {stat.value}
                </div>
                <div class="text-brand-charcoal/70 text-sm tracking-wide uppercase font-bold">
                  {stat.label}
                </div>
              </div>
            ))
          }
        </div>

        <div class="flex justify-center gap-2 mt-2 md:hidden">
          {siteConfig.hero.stats.map((_, i) => (
            <div 
              class="h-2 w-2 rounded-full bg-brand-charcoal/20 transition-colors duration-300" 
              data-hero-dot={i}
            ></div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
  
  /* Simplified Active State */
  .dot-active { 
    background-color: #2d3446 !important; 
    opacity: 1;
  }
</style>

<script>
  function initHeroDots() {
    const track = document.getElementById('hero-stats-track');
    const dots = document.querySelectorAll('[data-hero-dot]');
    
    if (!track || dots.length === 0) return;

    const updateDots = () => {
      const scrollPos = track.scrollLeft;
      const cardWidth = track.querySelector('div').offsetWidth + 16; // Width + gap
      const activeIndex = Math.round(scrollPos / cardWidth);

      dots.forEach((dot, i) => {
        if (i === activeIndex) {
          dot.classList.add('dot-active');
        } else {
          dot.classList.remove('dot-active');
        }
      });
    };

    track.addEventListener('scroll', updateDots);
    updateDots();
  }

  document.addEventListener('DOMContentLoaded', initHeroDots);
  document.addEventListener('astro:after-swap', initHeroDots);
</script>