---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';

// Updated icon map for IG, FB, and LinkedIn
const iconMap = {
  instagram: 'simple-icons:instagram',
  facebook: 'simple-icons:facebook',
  linkedin: 'simple-icons:linkedin',
};
---

<footer class="relative bg-[#fdfcf6] border-t-4 border-brand-charcoal px-4 py-12 text-brand-charcoal sm:px-6 lg:px-8">
  
  <div class="absolute inset-0 opacity-[0.05] mix-blend-multiply pointer-events-none" style="background-image: url('https://www.transparenttextures.com/patterns/carbon-fibre.png');"></div>

  <div class="mx-auto max-w-5xl relative z-10">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-12 items-start">
      
      <div class="md:col-span-4">
        <img 
          src="/logo.svg" 
          alt={siteConfig.site.name} 
          class="h-9 w-auto mb-4" 
        />
        <p class="text-lg font-black uppercase italic tracking-tighter leading-none opacity-90 max-w-[200px] mb-4">
          Bespoke learning platforms for independent tutors.
        </p>
        <a 
          href="https://jonesgroup.tech" 
          target="_blank" 
          class="text-[10px] font-black uppercase tracking-widest hover:text-brand-mint transition-colors inline-flex items-center gap-1"
        >
          Part of Jones Group <Icon name="heroicons:arrow-up-right" class="w-3 h-3" />
        </a>
      </div>

      <div class="grid grid-cols-2 gap-8 md:col-span-8 md:grid-cols-3">
        {
          siteConfig.footer.columns.map((column) => (
            <div>
              <h4 class="mb-4 text-[10px] font-black uppercase tracking-widest opacity-40">
                {column.title}
              </h4>
              <ul class="space-y-2">
                {column.links.map((link) => (
                  <li>
                    <a 
                      href={link.href} 
                      class="text-sm font-semibold uppercase tracking-tight hover:text-brand-mint transition-colors"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }

        <div>
          <h4 class="mb-4 text-[10px] font-black uppercase tracking-widest opacity-40">
            Legal
          </h4>
          <ul class="space-y-2">
            <li>
              <a href="/privacy" class="text-sm font-semibold uppercase tracking-tight hover:text-brand-mint transition-colors">
                Privacy Policy
              </a>
            </li>
            <li>
              <a href="/terms" class="text-sm font-semibold uppercase tracking-tight hover:text-brand-mint transition-colors">
                Terms of Service
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="mt-12 pt-6 border-t border-brand-charcoal/10 flex flex-col md:flex-row items-center justify-between gap-6">
      <p class="text-[10px] font-bold uppercase tracking-widest opacity-40">
        &copy; {siteConfig.footer.copyright}
      </p>

      <div class="flex space-x-6">
        <a href="#" class="text-brand-charcoal/40 hover:text-brand-charcoal transition-colors">
          <Icon name="simple-icons:instagram" class="h-5 w-5" />
        </a>
        <a href="#" class="text-brand-charcoal/40 hover:text-brand-charcoal transition-colors">
          <Icon name="simple-icons:facebook" class="h-5 w-5" />
        </a>
        <a href="#" class="text-brand-charcoal/40 hover:text-brand-charcoal transition-colors">
          <Icon name="simple-icons:linkedin" class="h-5 w-5" />
        </a>
      </div>
    </div>
  </div>
</footer>