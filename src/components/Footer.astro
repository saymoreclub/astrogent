---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
---

<footer class="relative bg-white/90 backdrop-blur-md border-t-4 border-brand-charcoal px-4 pt-12 pb-0 text-brand-charcoal sm:px-6 lg:px-8">
  
  <div class="absolute inset-0 opacity-[0.03] mix-blend-multiply pointer-events-none" style="background-image: url('https://www.transparenttextures.com/patterns/carbon-fibre.png');"></div>

  <div class="mx-auto max-w-5xl relative z-10">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-12 items-start">
      
      <div class="md:col-span-4"> 
        <img 
          src="/logo.svg" 
          alt={siteConfig.site.name} 
          class="h-10 w-auto mb-4" 
        />
        <p class="text-sm font-semibold uppercase tracking-widest leading-snug opacity-80 max-w-[240px]">
          Bespoke learning platforms for independent tutors.
        </p>
      </div>

      <div class="md:col-span-6"> 
        <div class="grid grid-cols-3 gap-1"> 
          {
            siteConfig.footer.columns.map((column) => (
              <div>
                <h4 class="mb-3 text-[10px] font-black uppercase tracking-widest opacity-40">
                  {column.title}
                </h4>
                <ul class="space-y-1">
                  {column.links.map((link) => (
                    <li>
                      <a 
                        href={link.href} 
                        class="text-sm font-semibold uppercase tracking-tight hover:text-brand-mint transition-colors"
                      >
                        {link.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }

          <div>
            <h4 class="mb-3 text-[10px] font-black uppercase tracking-widest opacity-40">
              Legal
            </h4>
            <ul class="space-y-1">
              <li>
                <a href="/privacy" class="text-sm font-semibold uppercase tracking-tight hover:text-brand-mint transition-colors">
                  Privacy
                </a>
              </li>
              <li>
                <a href="/terms" class="text-sm font-semibold uppercase tracking-tight hover:text-brand-mint transition-colors">
                  Terms
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-10 py-6 border-t border-brand-charcoal/10 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex flex-wrap items-center justify-center md:justify-start gap-x-3">
        <p class="text-[10px] font-bold uppercase tracking-widest opacity-40">
          &copy; {siteConfig.footer.copyright}
        </p>
        <span class="text-brand-charcoal/10">â€¢</span>
        <a 
          href="https://jonesgroup.tech" 
          target="_blank" 
          class="text-[10px] font-black uppercase tracking-widest hover:text-brand-mint transition-colors"
        >
          Part of Jones Group
        </a>
      </div>

      <div class="flex space-x-5">
        <a href="#" class="text-brand-charcoal/40 hover:text-brand-charcoal transition-colors">
          <Icon name="simple-icons:instagram" class="h-5 w-5" />
        </a>
        <a href="#" class="text-brand-charcoal/40 hover:text-brand-charcoal transition-colors">
          <Icon name="simple-icons:facebook" class="h-5 w-5" />
        </a>
        <a href="#" class="text-brand-charcoal/40 hover:text-brand-charcoal transition-colors">
          <Icon name="simple-icons:linkedin" class="h-5 w-5" />
        </a>
      </div>
    </div>
  </div>
</footer>