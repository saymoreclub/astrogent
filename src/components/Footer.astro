---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
---

<footer id="main-footer" class="teachwell-footer relative bg-brand-charcoal border-t-8 border-brand-charcoal px-4 pt-16 pb-8 text-white sm:px-6 lg:px-8 z-[100]">
  
  <div class="absolute inset-0 bg-brand-charcoal z-0"></div>

  <div class="mx-auto max-w-6xl relative z-10">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-12 items-start">
      
      <div class="md:col-span-5 lg:col-span-6">
        <div class="inline-block bg-white px-4 py-3 border-4 border-brand-mint shadow-[6px_6px_0px_0px_rgba(71,126,255,1)] -rotate-1 mb-6">
           <img 
             src="/logo.svg" 
             alt="Teachwell Logo" 
             class="h-8 w-auto"
           />
        </div>
        <p class="text-md font-bold uppercase tracking-tight leading-snug text-white/90 max-w-[320px]">
          Bespoke learning platforms built to help independent tutors organise and scale their business.
        </p>
      </div>

      <div class="md:col-span-7 lg:col-span-6">
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-8">
          {
            siteConfig.footer.columns.map((column) => (
              <div>
                <h4 class="mb-4 text-[11px] font-black uppercase tracking-[0.2em] text-brand-mint">
                  {column.title}
                </h4>
                <ul class="space-y-3">
                  {column.links.map((link) => {
                    // Logic to ensure links go back to homepage if they are anchors
                    const href = link.href.startsWith('#') ? `/${link.href}` : link.href;
                    return (
                      <li>
                        <a 
                          href={href} 
                          class="text-sm font-bold uppercase tracking-tight text-white/70 hover:text-white hover:pl-1 transition-all inline-block"
                        >
                          {link.name}
                        </a>
                      </li>
                    );
                  })}
                </ul>
              </div>
            ))
          }

          <div>
            <h4 class="mb-4 text-[11px] font-black uppercase tracking-[0.2em] text-brand-mint">
              Legal
            </h4>
            <ul class="space-y-3">
              <li>
                <a href="/privacy" class="text-sm font-bold uppercase tracking-tight text-white/70 hover:text-white hover:pl-1 transition-all inline-block">
                  Privacy
                </a>
              </li>
              <li>
                <a href="/terms" class="text-sm font-bold uppercase tracking-tight text-white/70 hover:text-white hover:pl-1 transition-all inline-block">
                  Terms
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-20 pt-8 border-t-2 border-white/10 flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="flex flex-col md:flex-row items-center gap-4 text-center md:text-left">
        <p class="text-[10px] font-black uppercase tracking-widest text-brand-mint">
          Â© Teachwell.io 2026. All rights reserved.
        </p>
        <div class="hidden md:block h-1 w-1 rounded-full bg-white/20"></div>
        <div class="flex items-center">
          <a 
            href="https://jonesgroup.tech" 
            target="_blank" 
            class="transition-opacity hover:opacity-80"
          >
            <img 
              src="https://www.jonesgroup.tech/assets/logodarkmode.svg" 
              alt="Jones Group" 
              class="h-5 w-auto"
            />
          </a>
        </div>
      </div>

      <div class="flex gap-4">
        {[
          { icon: 'simple-icons:instagram', href: '#' },
          { icon: 'simple-icons:facebook', href: '#' },
          { icon: 'simple-icons:linkedin', href: '#' }
        ].map((social) => (
          <a 
            href={social.href} 
            class="bg-white/5 border-2 border-white/10 p-2 rounded-xl hover:bg-brand-mint hover:border-brand-charcoal hover:text-brand-charcoal transition-all hover:-translate-y-1 shadow-[4px_4px_0px_0px_rgba(0,0,0,0.2)] text-white"
          >
            <Icon name={social.icon} class="h-5 w-5" />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>