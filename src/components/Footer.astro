---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';

const iconMap = {
  twitter: 'simple-icons:x',
  github: 'simple-icons:github',
  linkedin: 'simple-icons:linkedin',
};
---

<footer class="relative bg-[#fdfcf6] border-t-4 border-brand-charcoal px-4 py-12 text-brand-charcoal sm:px-6 lg:px-8 overflow-hidden">
  
  <div class="absolute inset-0 opacity-[0.05] mix-blend-multiply pointer-events-none" style="background-image: url('https://www.transparenttextures.com/patterns/carbon-fibre.png');"></div>

  <div class="mx-auto max-w-7xl relative z-10">
    <div class="flex flex-col md:flex-row justify-between items-start gap-10">
      
      <div class="max-w-xs">
        <img 
          src="/logo.svg" 
          alt={siteConfig.site.name} 
          class="h-9 w-auto mb-4" 
        />
        <p class="text-base font-semibold uppercase tracking-tight opacity-70 leading-snug">
          {siteConfig.footer.tagline}
        </p>
      </div>

      <div class="flex gap-12 sm:gap-20">
        {
          siteConfig.footer.columns.map((column) => (
            <div>
              <h4 class="mb-4 text-[10px] font-black uppercase tracking-widest opacity-40">
                {column.title}
              </h4>
              <ul class="space-y-2">
                {column.links.map((link) => (
                  <li>
                    <a 
                      href={link.href} 
                      class="text-sm font-semibold uppercase tracking-tight hover:text-brand-mint transition-colors"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-brand-charcoal/10 flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="flex items-center space-x-4">
        <p class="text-[10px] font-bold uppercase tracking-widest opacity-40">
          &copy; {siteConfig.footer.copyright}
        </p>
        <span class="text-brand-charcoal/20">|</span>
        <a 
          href="https://jonesgroup.tech" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-[10px] font-black uppercase tracking-widest hover:text-brand-mint transition-colors"
        >
          Part of Jones Group
        </a>
      </div>

      <div class="flex space-x-5">
        {
          siteConfig.footer.social.map((social) => (
            <a
              href={social.href}
              class="text-brand-charcoal/40 hover:text-brand-charcoal transition-colors"
              aria-label={social.name}
            >
              <Icon name={iconMap[social.icon] || 'heroicons:link'} class="h-5 w-5" />
            </a>
          ) )
        }
      </div>
    </div>
  </div>
</footer>