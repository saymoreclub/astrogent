---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
---

<nav
  class="fixed top-0 z-50 w-full border-b-4 border-brand-charcoal bg-white/90 backdrop-blur-md"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between"> 
      <div class="flex items-center">
        <a href="/" class="transition-transform hover:scale-105 flex items-center">
          <img src="/logo.svg" alt={siteConfig.site.name} class="h-9 w-auto" /> 
        </a>
      </div>

      <div class="hidden items-center space-x-10 md:flex">
        {
          siteConfig.navigation.links.map((link) => (
            <a 
              href={link.href} 
              class="text-sm font-semibold uppercase tracking-widest text-brand-charcoal hover:text-brand-mint transition-colors"
            >
              {link.name}
            </a>
          ))
        }
        <a
          href={siteConfig.navigation.cta.href}
          class="relative group"
        >
          <div class="absolute inset-0 bg-brand-charcoal rounded-lg translate-x-1 translate-y-1"></div>
          <div class="relative bg-brand-mint border-2 border-brand-charcoal rounded-lg px-5 py-2 text-xs font-bold uppercase tracking-tight text-brand-charcoal group-hover:translate-x-0.5 group-hover:translate-y-0.5 transition-transform">
            {siteConfig.navigation.cta.text}
          </div>
        </a>
      </div>

      <button
        id="mobileMenuButton"
        class="flex items-center justify-center rounded-lg p-1.5 md:hidden border-2 border-brand-charcoal bg-brand-mint shadow-[2px_2px_0px_0px_rgba(45,52,70,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px] transition-all"
        aria-controls="mobileMenu"
        aria-expanded="false"
        aria-label="Toggle navigation menu"
      >
        <Icon name="heroicons:bars-3" class="text-brand-charcoal h-6 w-6" />
      </button>
    </div>

    <div 
      id="mobileMenu" 
      class="hidden border-t-2 border-brand-charcoal/10 pb-6 md:hidden" 
      aria-hidden="true"
    >
      <div class="flex flex-col space-y-4 pt-4">
        {
          siteConfig.navigation.links.map((link) => (
            <a 
              href={link.href} 
              class="text-lg font-semibold uppercase tracking-tight text-brand-charcoal py-2 border-b border-brand-charcoal/5"
            >
              {link.name}
            </a>
          ))
        }
        <a
          href={siteConfig.navigation.cta.href}
          class="bg-brand-mint border-2 border-brand-charcoal rounded-lg px-6 py-4 text-center font-bold uppercase tracking-tight text-brand-charcoal shadow-[4px_4px_0px_0px_rgba(45,52,70,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all"
        >
          {siteConfig.navigation.cta.text}
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobileMenuButton');
    const mobileMenu = document.getElementById('mobileMenu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
        mobileMenu.setAttribute('aria-hidden', String(isExpanded));
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>