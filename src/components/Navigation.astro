---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
---

<nav
  class="fixed top-0 z-50 w-full border-b-4 border-brand-charcoal bg-white/90 backdrop-blur-md"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 md:h-20 items-center justify-between"> 
      <div class="flex items-center">
        <a href="/" class="transition-transform hover:scale-105 flex items-center shrink-0">
          <img src="/logo.svg" alt={siteConfig.site.name} class="h-8 md:h-10 w-auto" /> 
        </a>
      </div>

      <div class="hidden items-center space-x-10 md:flex">
        {
          siteConfig.navigation.links.map((link) => (
            <a 
              href={link.href} 
              class="text-xs font-black uppercase italic tracking-tighter text-brand-charcoal hover:text-brand-mint transition-colors"
            >
              {link.name}
            </a>
          ))
        }
        <a
          href={siteConfig.navigation.cta.href}
          class="relative group"
        >
          <div class="absolute inset-0 bg-brand-charcoal rounded-lg translate-x-1 translate-y-1"></div>
          <div class="relative bg-brand-mint border-2 border-brand-charcoal rounded-lg px-5 py-2 text-xs font-black uppercase italic tracking-tighter text-brand-charcoal group-hover:translate-x-0 group-hover:translate-y-0.5 transition-transform">
            {siteConfig.navigation.cta.text}
          </div>
        </a>
      </div>

      <button
        id="mobileMenuButton"
        class="flex items-center justify-center rounded-lg p-2 md:hidden border-2 border-brand-charcoal bg-white shadow-[3px_3px_0px_0px_rgba(45,52,70,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all"
        aria-controls="mobileMenu"
        aria-expanded="false"
        aria-label="Toggle navigation menu"
      >
        <Icon name="heroicons:bars-3" class="text-brand-charcoal h-6 w-6" />
      </button>
    </div>

    <div 
      id="mobileMenu" 
      class="hidden border-t-4 border-brand-charcoal pb-8 md:hidden" 
      aria-hidden="true"
    >
      <div class="flex flex-col pt-4">
        {
          siteConfig.navigation.links.map((link) => (
            <a 
              href={link.href} 
              class="text-2xl font-black uppercase italic tracking-tighter text-brand-charcoal py-5 border-b-2 border-brand-charcoal/5 active:bg-brand-mint/20 transition-colors"
            >
              {link.name}
            </a>
          ))
        }
        <div class="pt-8">
          <a
            href={siteConfig.navigation.cta.href}
            class="block w-full bg-brand-mint border-4 border-brand-charcoal rounded-xl px-6 py-5 text-center text-xl font-black uppercase italic tracking-tighter text-brand-charcoal shadow-[6px_6px_0px_0px_rgba(45,52,70,1)] active:shadow-none active:translate-x-[4px] active:translate-y-[4px] transition-all"
          >
            {siteConfig.navigation.cta.text}
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Script logic remains the same - handles the toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobileMenuButton');
    const mobileMenu = document.getElementById('mobileMenu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
        mobileMenu.setAttribute('aria-hidden', String(isExpanded));
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>