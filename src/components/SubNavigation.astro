---
import { siteConfig } from '../config.ts';
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b-4 border-brand-charcoal px-4 py-3 md:py-4">
  <div class="mx-auto max-w-5xl flex items-center justify-between gap-2">
    <a href="/" class="transition-transform hover:scale-95 shrink-0">
      <img src="/logo.svg" alt={siteConfig.site.name} class="h-8 md:h-10 w-auto" />
    </a>

    <div class="flex items-center">
      <a 
        href="/" 
        class="text-[10px] md:text-xs font-black uppercase tracking-tighter bg-brand-mint text-brand-charcoal border-2 border-brand-charcoal px-3 py-2 md:px-6 shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] md:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all whitespace-nowrap"
      >
        Back to Home
      </a>
    </div>
  </div>
</nav>